<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royalblue</item>
        <item name="colorPrimaryDark">@color/mediumblue</item>
        <item name="colorAccent">@color/deeppink</item>
    </style>
    <!-- TEXT VIEW. -->
    <style name="textViewStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textViewStyle.grande">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="textViewStyle.peque">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkorange</item>
    </style>

    <!-- EDIT TEXT. -->
    <style name="editTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
